<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="10dip" android:top="10dip"
                        android:right="10dip" android:left="10dip"/>
                    <corners android:radius="64dip" />
                    <solid android:color="#c0c0c0" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#c0c0c0"  />
                    <corners android:radius="64dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:bottom="-4dip" android:top="-4dip"
                        android:right="-4dip" android:left="-4dip"/>
                    <corners android:radius="64dip" />
                    <solid android:color="#00000000" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#00000000" android:width="8dip" />
                    <solid android:color="#393939"  />
                    <corners android:radius="64dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>